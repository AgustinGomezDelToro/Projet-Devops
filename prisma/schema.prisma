datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model user {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String
  createAt  DateTime @default(now())
  updateAt  DateTime @updatedAt
  events    event[]  // Una relación uno a muchos con el modelo 'event'
}

model event {
  id          Int      @id @default(autoincrement())
  Subject     String
  StartTime   DateTime
  EndTime     DateTime
  PatientId   Int
  Color       String?  // Nuevo campo para el color
  Patient     pacientes @relation(fields: [PatientId], references: [id])
  userId      Int?
  user        user?     @relation(fields: [userId], references: [id])
}


model pacientes {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  role        String
  clinicHistory String
  patienDe    String
  createAt    DateTime @default(now())
  updateAt    DateTime @updatedAt
  events      event[]  // Relación uno a muchos con el modelo 'event'
}

model odontograma {
    id        Int      @id @default(autoincrement())
    name      String
    email     String   @unique
    password  String
    role      String
    clinicHistory String
    patienDe String
    createAt  DateTime @default(now())
    updateAt  DateTime @updatedAt
}
